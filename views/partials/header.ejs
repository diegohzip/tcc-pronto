<header class="cabecalho">
  <div class="conteudo-cabecalho">
    <div class="logo">
      <img src="/images/logo.png" alt="Logo Nexus Training" class="logo-img" />
      <span>Nexus Training</span>
    </div>
    <div id="areaUsuario">
      <% if (usuario) { %>
        <span id="abrirPerfil">üë§ Meu Perfil</span>
      <% } else { %>
        <a href="/login">Login</a>
        <a href="/login?modo=cadastro">Cadastro</a>
      <% } %>
    </div>
  </div>
</header>

<style>
.logo {
  display: flex;
  align-items: center;
  gap: 10px; /* espa√ßo entre imagem e texto */
  font-weight: bold;
  font-size: 1.6rem;
  color: white;
}

.logo-img {
  width: 40px; /* ajuste o tamanho conforme necess√°rio */
  height: auto;
}
</style>

<!-- Pop-up do Perfil -->
<div id="popupPerfil" class="popup-perfil">
  <div class="popup-content">
    <button id="fecharPopupPerfil" class="fechar-popup">X</button>
    <h2>Meu Perfil</h2>

    <form id="formPerfil">
      <label for="nomeUsuario">Nome:</label>
      <input type="text" id="nomeUsuario" name="nome" value="<%= usuario ? usuario.nome : '' %>" disabled />

      <label for="emailUsuario">Email:</label>
      <input type="email" id="emailUsuario" name="email" value="<%= usuario ? usuario.email : '' %>" disabled />

      <label for="telefoneUsuario">Telefone:</label>
      <input type="text" id="telefoneUsuario" name="telefone" value="<%= usuario ? usuario.telefone : '' %>" disabled />

      <label for="generoUsuario">G√™nero:</label>
      <select id="generoUsuario" name="genero" disabled>
        <option value="">Selecione</option>
        <option value="Masculino" <%= usuario && usuario.genero.toLowerCase() === 'masculino' ? 'selected' : '' %>>Masculino</option>
        <option value="Feminino" <%= usuario && usuario.genero.toLowerCase() === 'feminino' ? 'selected' : '' %>>Feminino</option>
        <option value="Outro" <%= usuario && usuario.genero.toLowerCase() === 'outro' ? 'selected' : '' %>>Outro</option>
      </select>


      <div class="botoes-perfil">
        <button type="button" id="btnEditar" class="botao-editar">Editar Informa√ß√µes</button>
        <button type="submit" id="btnSalvar" class="botao-salvar" style="display:none;">Salvar</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/header.js"></script>

<style>
/* √Årea do usu√°rio */
#areaUsuario span, #areaUsuario a {
  cursor: pointer;
  background-color: white;
  color: #d00000;
  padding: 0.5rem 1rem;
  border-radius: 5px;
  text-decoration: none;
  margin-left: 0.5rem;
  font-weight: bold;
  transition: 0.4s;
}
#areaUsuario span:hover, #areaUsuario a:hover {
  background-color: #d00000;
  color: white;
  border: solid 1px white;
  transition: 0.4s;
}

/* Popup Perfil */
.popup-perfil {
  display: none;
  position: fixed;
  top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0,0,0,0.35);
  justify-content: center;
  align-items: center;
  z-index: 9999;
  font-family: 'Poppins', sans-serif;
}
.popup-content {
  position: relative;
  background: #fff;
  padding: 2rem 1.5rem;
  border-radius: 15px;
  width: 360px;
  max-width: 90%;
  text-align: left;
  box-shadow: 0 4px 20px rgba(0,0,0,0.2);
}
.popup-content h2 {
  text-align: center;
  color: #d00000;
  margin-bottom: 1.5rem;
  font-size: 1.4rem;
  font-weight: 600;
}
.fechar-popup {
  position: absolute;
  top: 12px;
  right: 12px;
  background: transparent;
  border: none;
  font-size: 1.2rem;
  cursor: pointer;
  color: #d00000;
  transition: 0.2s;
}
.fechar-popup:hover {
  color: #ff5555;
}
#popupPerfil input,
#popupPerfil select {
  width: 100%;
  padding: 10px 12px;
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 10px;
  font-size: 1rem;
  font-family: 'Poppins', sans-serif;
  box-sizing: border-box;
}
.botoes-perfil {
  display: flex;
  justify-content: space-between;
}
.botao-editar,
.botao-salvar {
  flex: 1;
  margin: 5px;
  padding: 10px 0;
  border: none;
  border-radius: 10px;
  color: white;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s;
}
.botao-editar {
  background-color: #d00000;
}
.botao-editar:hover {
  background-color: white;
  color: #d00000;
  border: 1px solid #d00000;
}
.botao-salvar {
  background-color: #009e4f;
}
.botao-salvar:hover {
  background-color: white;
  color: #009e4f;
  border: 1px solid #009e4f;
}
</style>
